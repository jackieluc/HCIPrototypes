<Window x:Class="horizontal_prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JCR Entertainment" Height="748.5" Width="1280" Icon="Resources/Youtube_Icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="138*"/>
            <RowDefinition Height="170*"/>
            <RowDefinition Height="191*"/>
            <RowDefinition Height="199*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="935*"/>
            <ColumnDefinition Width="339*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/bg.jpg"/>
        </Grid.Background>

        <Button x:Name="netflix_button" Background="Transparent" HorizontalAlignment="Left" Margin="77,1,0,0" VerticalAlignment="Top" Width="286" Height="110" Click="netflix_Click" Grid.Row="2">
            <Image x:Name="netflix_img" Source="Resources/netflix.png"/>
        </Button>

        <Button x:Name="movies_button" Background="Transparent" HorizontalAlignment="Left" Margin="487,1,0,0" VerticalAlignment="Top" Width="286" Height="110" Click="movies_Click" Grid.Row="2">
            <Image x:Name="movies_img" Source="Resources/movies.png"/>
        </Button>

        <Button x:Name="tvshows_button" Background="Transparent" HorizontalAlignment="Left" Margin="911,1,0,0" VerticalAlignment="Top" Width="286" Height="110" Click="tvshows_button_Click" Grid.ColumnSpan="2" Grid.Row="2">
            <Image x:Name="tvshows_img" Source="Resources/tvshows.png" Stretch="Fill"/>
        </Button>

        <Button x:Name="favourites_button" Background="Transparent" HorizontalAlignment="Left" Margin="223,0,0,0" VerticalAlignment="Top" Width="140" Height="140" Click="favourites_button_Click" Grid.Row="3">
            <Image x:Name="favourites_img" Source="Resources/favourites.png"/>
        </Button>

        <Button x:Name="music_button" Background="Transparent" HorizontalAlignment="Left" Margin="487,0,0,0" VerticalAlignment="Top" Width="140" Height="140" Click="music_button_Click" Grid.Row="3">
            <Image x:Name="music_img" Source="Resources/music.png"/>
        </Button>

        <Button x:Name="settings_button" Background="Transparent" HorizontalAlignment="Left" Margin="77,0,0,0" VerticalAlignment="Top" Width="140" Height="140" Click="settings_button_Click" Grid.Row="4">
            <Image x:Name="settings_img" Source="Resources/settings.png"/>
        </Button>

        <Button x:Name="spotify_button" Background="Transparent" HorizontalAlignment="Left" Margin="633,0,0,0" VerticalAlignment="Top" Width="140" Height="140" Click="spotify_button_Click" Grid.Row="3">
            <Image x:Name="spotify_img" Source="Resources/spotify.png"/>
        </Button>

        <Button x:Name="youtube_button" Background="Transparent" HorizontalAlignment="Left" Margin="77,0,0,0" VerticalAlignment="Top" Width="140" Height="140" Click="youtube_button_Click" Grid.Row="3">
            <Image x:Name="youtube_img" Source="Resources/youtube.png" Stretch="UniformToFill"/>
        </Button>

        <Label x:Name="textBlock" HorizontalAlignment="Left" Margin="414,19,0,0" VerticalAlignment="Top" Content="JCR Entertainment" Foreground="White" FontWeight="Bold" Height="39" Width="229" FontSize="24" Grid.RowSpan="2"/>
        <Label x:Name="Login" Content="Login:" HorizontalAlignment="Left" Margin="670,2,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" FontSize="16" Height="31" Width="56" Grid.Row="1"/>
        <TextBox x:Name="Username_form" HorizontalAlignment="Left" Height="23" Margin="726,8,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="157" TextChanged="Username_form_TextChanged" Grid.Row="1" GotFocus="textbox_clear"/>
        <Label x:Name="Password" Content="Password:" HorizontalAlignment="Left" Margin="883,2,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Foreground="White" Grid.ColumnSpan="2" Height="31" Width="86" Grid.Row="1"/>
        <TextBox x:Name="Password_form" HorizontalAlignment="Left" Height="23" Margin="39,8,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="161" TextChanged="Password_form_TextChanged" Grid.Column="1" Grid.Row="1" GotFocus="textbox_clear"/>
        <Button x:Name="Login_button" Content="Login" HorizontalAlignment="Left" Margin="212,8,0,0" VerticalAlignment="Top" Width="75" Click="Login_button_Click" Grid.Column="1" Height="22" Grid.Row="1"/>

        <Rectangle x:Name="movieList" Fill="#FF2E2E2E" HorizontalAlignment="Left" Height="534" Stroke="Black" VerticalAlignment="Top" Width="1012" Margin="117,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="movieListBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="142,28,0,0" Click="closeMovieList" Visibility="Hidden" BorderBrush="#FF2E2E2E" Background="#FF3D3C3C" Foreground="#FF989191" Grid.Row="2" Height="22"/>
        <TextBox x:Name="movieTitle" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="Movies" VerticalAlignment="Top" Width="410" Margin="414,14,0,0" Background="#FF2E2E2E" FontSize="48" TextAlignment="Center" Foreground="#FF989191" FontWeight="Bold" BorderBrush="#FF2E2E2E" Visibility="Hidden" Grid.Row="2"/>

        <Rectangle x:Name="tvshowList" Fill="#FF2E2E2E" HorizontalAlignment="Left" Height="534" Stroke="Black" VerticalAlignment="Top" Width="1012" Margin="117,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="tvshowListBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="142,28,0,0" Click="closeTvList" Visibility="Hidden" BorderBrush="#FF2E2E2E" Background="#FF3D3C3C" Foreground="#FF989191" Grid.Row="2" Height="22"/>
        <TextBox x:Name="tvshowTitle" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="TV Shows" VerticalAlignment="Top" Width="410" Margin="414,14,0,0" Background="#FF2E2E2E" FontSize="48" TextAlignment="Center" Foreground="#FF989191" FontWeight="Bold" BorderBrush="#FF2E2E2E" Visibility="Hidden" Grid.Row="2"/>

        <Rectangle x:Name="favoritesList" Fill="#FF2E2E2E" HorizontalAlignment="Left" Height="534" Stroke="Black" VerticalAlignment="Top" Width="1012" Margin="117,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="favoritesListBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="142,28,0,0" Click="closeFavoritesList" Visibility="Hidden" BorderBrush="#FF2E2E2E" Background="#FF3D3C3C" Foreground="#FF989191" Grid.Row="2" Height="22"/>
        <TextBox x:Name="favoritesTitle" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="Favorities" VerticalAlignment="Top" Width="410" Margin="414,14,0,0" Background="#FF2E2E2E" FontSize="48" TextAlignment="Center" Foreground="#FF989191" FontWeight="Bold" BorderBrush="#FF2E2E2E" Visibility="Hidden" Grid.Row="2"/>

        <Rectangle x:Name="musicList" Fill="#FF2E2E2E" HorizontalAlignment="Left" Height="534" Stroke="Black" VerticalAlignment="Top" Width="1012" Margin="117,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="musicListBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="142,28,0,0" Visibility="Hidden" Click="closeMusicList" BorderBrush="#FF2E2E2E" Background="#FF3D3C3C" Foreground="#FF989191" Grid.Row="2" Height="22"/>
        <TextBox x:Name="musicTitle" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="Music" VerticalAlignment="Top" Width="410" Margin="414,14,0,0" Background="#FF2E2E2E" FontSize="48" TextAlignment="Center" Foreground="#FF989191" FontWeight="Bold" BorderBrush="#FF2E2E2E" Visibility="Hidden" Grid.Row="2"/>

        <Rectangle x:Name="settings" HorizontalAlignment="Left" Height="534" Stroke="White" VerticalAlignment="Top" Width="1012" Margin="117,1,0,0" Grid.ColumnSpan="2" Fill="#FF2E2E2E" Visibility="Hidden" Grid.Row="2" Grid.RowSpan="3"/>
        <Button x:Name="settingsBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="142,28,0,0" Click="closeSettings" BorderBrush="#FF2E2E2E" Background="#FF3D3C3C" Foreground="#FF989191" Visibility="Hidden" Grid.Row="2" Height="22" />
        <TextBox x:Name="settingsTitle" HorizontalAlignment="Left" Height="61" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Width="410" Margin="414,14,0,0" FontSize="48" TextAlignment="Center" Foreground="#FF989191" FontWeight="Bold" BorderBrush="#FF2E2E2E" Visibility="Hidden" Background="#FF2E2E2E" Grid.Row="2"/>
        <Button x:Name="videoSettings" Content="Video Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="514" Margin="363,111,0,0" Height="54" BorderBrush="Black" Background="#FF3D3C3C" Foreground="#FF989191" FontSize="32" FontWeight="Bold" Visibility="Hidden" Grid.Row="2"/>
        <Button x:Name="powerSettings" Content="Power Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="514" Margin="363,42,0,0" Height="54" BorderBrush="Black" Background="#FF3D3C3C" Foreground="#FF989191" FontSize="32" FontWeight="Bold" Visibility="Hidden" Grid.Row="3"/>
        <Button x:Name="dataAndTime" Content="Date And Time" HorizontalAlignment="Left" VerticalAlignment="Top" Width="514" Margin="363,104,0,0" Height="54" BorderBrush="Black" Background="#FF3D3C3C" Foreground="#FF989191" FontSize="32" FontWeight="Bold" Visibility="Hidden" Grid.Row="3"/>
        <Button x:Name="audioSettings" Content="Audio Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="514" Margin="363,18,0,0" Height="54" BorderBrush="Black" Background="#FF3D3C3C" Foreground="#FF989191" FontSize="32" FontWeight="Bold" Visibility="Hidden" Grid.Row="4"/>

        <Label x:Name="date_time" Content="00/00/0000 00:00:00 PM" HorizontalAlignment="Left" Margin="77,19,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Initialized="initialize_date_time" Height="42" Width="268" Grid.RowSpan="2"/>
    </Grid>
</Window>
